<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_2383C6">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="842dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTellerLayer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/glVertical"
        >

        <ImageView
            android:id="@+id/ivTellerImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/test1" />
        <!--        android:scaleType="centerCrop"-->
    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/logo1"
        app:layout_constraintTop_toTopOf="@id/cvTellerLayer"
        app:layout_constraintEnd_toEndOf="@id/cvTellerLayer"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tvDeskNum"
        android:layout_width="260dp"
        android:layout_height="200dp"
        android:layout_marginTop="56dp"
        android:longClickable="true"
        android:textIsSelectable="false"
        android:background="@drawable/rectangle_round_desk_num"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="180sp"
        android:textStyle="bold"
        android:fontFamily="@font/custom_font_woori"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@id/glVertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00"
        />
    <View
        android:id="@+id/vDeskNameLine"
        android:layout_width="756dp"
        android:layout_height="10dp"
        android:background="@color/_53B7E8"
        app:layout_constraintStart_toEndOf="@id/tvDeskNum"
        app:layout_constraintBottom_toBottomOf="@id/tvDeskNum"
        />
    <TextView
        android:id="@+id/tvDeskName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvDeskNum"
        app:layout_constraintBottom_toBottomOf="@id/tvDeskNum"
        android:textColor="@color/white"
        android:textSize="120sp"
        android:fontFamily="@font/custom_font_woori"
        android:includeFontPadding="false"
        tools:text="예금카드"
        />

    <View
        android:id="@+id/vLine2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="95dp"
        android:background="@color/_5CAFE0"
        app:layout_constraintBottom_toTopOf="@id/vBottomBackground"
        app:layout_constraintStart_toStartOf="@id/tvDeskNum"
        app:layout_constraintEnd_toStartOf="@id/tvWaitingPrefix"
        />
    <TextView
        android:id="@+id/tvWaitingPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:text="@string/waiting_people2"
        android:textSize="55sp"
        android:fontFamily="@font/custom_font_woori"
        android:textColor="@color/_8ED8F8"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/vLine2"
        app:layout_constraintEnd_toStartOf="@id/tvWaitingNum"
        app:layout_constraintTop_toTopOf="@id/vLine2"
        app:layout_constraintBottom_toBottomOf="@id/vLine2"
        />

    <TextView
        android:id="@+id/tvWaitingNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="7dp"
        android:textColor="@color/white"
        android:textSize="120sp"
        android:fontFamily="@font/custom_font_woori"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/tvWaitingPrefix"
        app:layout_constraintBottom_toBottomOf="@id/tvWaitingPrefix"
        app:layout_constraintEnd_toStartOf="@id/tvWaitingSuffix"
        app:layout_constraintStart_toEndOf="@id/tvWaitingPrefix"
        tools:text="00" />

    <TextView
        android:id="@+id/tvWaitingSuffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="58dp"
        android:text="@string/suffix_people"
        android:textSize="55sp"
        android:textColor="@color/_8ED8F8"
        android:fontFamily="@font/custom_font_woori"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/tvWaitingNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvWaitingPrefix"
        />

    <TextView
        android:id="@+id/tvCallNum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="250sp"
        android:textColor="@color/white"
        android:fontFamily="@font/custom_font_woori"
        app:layout_constraintStart_toStartOf="@id/tvDeskNum"
        app:layout_constraintEnd_toEndOf="@id/vDeskNameLine"
        app:layout_constraintTop_toBottomOf="@id/vDeskNameLine"
        app:layout_constraintBottom_toTopOf="@id/vLine2"
        tools:text="0000"
        />
    <View
        android:id="@+id/vBottomBackground"
        android:layout_width="0dp"
        android:layout_height="185dp"
        android:background="@color/_801A1F28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvTellerJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:letterSpacing="-0.02"
        android:fontFamily="@font/custom_font_woori"
        android:visibility="gone"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/vBottomBackground"
        app:layout_constraintEnd_toStartOf="@id/tvTellerName"
        app:layout_constraintBottom_toBottomOf="@id/tvTellerName"
        tools:text="개인고객 팀장"
        />
    <TextView
        android:id="@+id/tvTellerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:gravity="center"
        android:textSize="86sp"
        android:textColor="@color/white"
        android:letterSpacing="0.2"
        android:textStyle="bold"
        android:fontFamily="@font/custom_font_woori"
        app:layout_goneMarginStart="0dp"
        app:layout_constraintStart_toStartOf="@id/cvTellerLayer"
        app:layout_constraintEnd_toEndOf="@id/cvTellerLayer"
        app:layout_constraintTop_toTopOf="@id/vBottomBackground"
        app:layout_constraintBottom_toBottomOf="@id/cvTellerLayer"
        tools:text="김우리"
        />

    <HorizontalScrollView
        android:id="@+id/info_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@id/glVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vBottomBackground"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/custom_font_woori"
            android:includeFontPadding="false"
            android:gravity="center"
            android:textSize="62sp"
            android:textColor="@color/white"
            tools:text="우리은행에 방문해주셔서 감사합니다."/>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FF000040"
    android:orientation="vertical">

    <!--상단 창구번호 및 창구명-->
    <RelativeLayout
        android:background="@color/FF0471E8"
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_margin="0sp">

        <TextView
            android:id="@+id/tvWinNum"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:textColor="@color/FFFFFFFF"
            android:textSize="250sp"
            tools:text="01"
            />

        <TextView
            android:id="@+id/tvWinName"
            android:layout_width="980dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/tvWinNum"
            android:paddingTop="136dp"
            android:textColor="@color/FFFFFFFF"
            android:textSize="126sp"
            tools:text="입출금/제신고"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvWinName"
            android:orientation="vertical">
            <TextView
                android:layout_width="520dp"
                android:layout_height="100dp"
                android:gravity="bottom|center_horizontal"
                android:text="@string/waiting_count_label"
                tools:text="@string/waiting_count_label"
                android:textColor="@color/FFFFFFFF"
                android:textSize="50sp" />
            <TextView
                android:id="@+id/tvWaitNum"
                android:layout_width="520dp"
                android:layout_height="252dp"
                android:gravity="center"
                android:textColor="@color/FFFFFFFF"
                android:textSize="155sp"
                tools:text="111"
                />
        </LinearLayout>

    </RelativeLayout>

    <!--중간 메인 표시화면-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="623dp"
        android:background="@color/FF0471E8"
        >

        <TextView
            android:id="@+id/tvCallNum"
            android:layout_width="1330dp"
            android:layout_height="545dp"
            android:layout_marginStart="70dp"
            android:background="@drawable/radius25_ffffffff"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="420sp" />

        <!-- HISON 2024.07.12
        - 이미지 비율에 따라 표출되도록 수정,
        - 글자와 이미지 위치가 달라짐에 따라 위치 조정-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="545dp"
            android:layout_marginStart="1450dp"
            android:background="@drawable/radius25_e4f0fc">
            <TextView
                android:id="@+id/tvTellerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:letterSpacing="0.5"
                android:textColor="#368DED"
                android:textSize="50dp"
                app:layout_constraintTop_toBottomOf="@id/ivTellerImage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="홍길동"
                />
            <ImageView
                android:id="@+id/ivTellerImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="350dp"
                android:maxHeight="450dp"
                android:layout_margin="25dp"
                android:adjustViewBounds="true"
                android:layout_alignParentTop="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvTellerName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_width="350dp"
                tools:layout_height="350dp"
                tools:background="@drawable/radius25_ffffffff"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:textColor="#ffffff"
        android:textSize="56sp"
        tools:text="우리은행에 방문해 주셔서 감사합니다."/>
</LinearLayout>